@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<h1> Create New Role </h1>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Administration" asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Rolename"></label>
                 <input asp-for="Rolename" class="form-control" placeholder="Rolename" />
                <span asp-validation-for="Rolename" class="text-danger"></span>
            </div>
            <div>
                <button  style="width: auto" class="btn btn-primary" type="submit">Create Role</button>
            </div>
        </form>
    </div>
</div>